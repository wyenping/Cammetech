@model v3x.Models.SalaryModification
@{
    ViewData["Title"] = "ManageSalary";
}

<h2>Manage Salary</h2>
<p>Employee: @ViewData["EmpName"]</p>
<div class="row">
    <div class="col-md-4">
        <form asp-action="ManageSalary" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="JobId" value="@ViewData["JobId"]" />
            <input type="hidden" asp-for="EPFId" value="2" />
            <input type="hidden" asp-for="SocsoId" value="1" />
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input type="date" asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdvancePay" class="control-label"></label>
                <input asp-for="AdvancePay" class="form-control" />
                <span asp-validation-for="AdvancePay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bonus" class="control-label"></label>
                <input asp-for="Bonus" class="form-control" />
                <span asp-validation-for="Bonus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalRate" class="control-label"></label>
                <input asp-for="TotalRate" class="form-control" />
                <span asp-validation-for="TotalRate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
        <a asp-action="EmployeeTable">Back</a>
    </div>
</div>